<li id="user-<%= user.id %>">
  <%= link_to gravatar_for(user, :size => 80), user, { :class=>"border-to-gravatar" } %>
  <div class="user-c-1">
    <div>
      <h5><%= user.email %></h5>
    </div>
    <div>
      <span><%= link_to "View profile", user %></span>
      <span class="mx-auto"><%= pluralize(user.posts.count, "post") %></span>
    </div>
  </div>
</li>