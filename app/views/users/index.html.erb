
<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <% friend_link = current_user.friend?(user) ? 'Remove friend' : 'Add friend' %>
        <% unless current_user == user %>
          <% if current_user.friend?(user) %>
            <td><%= link_to 'Remove friend', user_friendship_path(user.id, current_user.id), method: :delete %></td>
          <% else %>
            <td><%= link_to 'Add friend', user_friendship_path(user.id, current_user.id), method: :post %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

