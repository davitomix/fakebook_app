<%= render 'shared/navbar' %>
<% if user_signed_in? %>
  <section class="post-user-section">
    <div class="user-info">
      <%= render 'shared/user_info' %>
    </div>

    <div class="post-form">
      <%= render 'shared/post_form' %>
    </div>
  </section>

  <section class="feed-who-section">
    <div class="who-add">
      <ol class="microposts">
        <%= render @who_friends %>
      </ol>
      <%= will_paginate @who_friends, :param_name => 'who_friend_page' %>
    </div>
    <div class="post-feed">
      <ol class="microposts">
        <%= render @feed_items %>
      </ol>
      <%= will_paginate @feed_items, :param_name => 'feed_items_page' %>
    </div>
  </section>
<% else %>
  <div class="center jumbotron">
    <h1>Fakebook</h1>
    <h2>
      A Facebook like social app built with Rails, Webpacker & ES6.
    </h2>
    <%= link_to 'Sign up now!', new_user_registration_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>