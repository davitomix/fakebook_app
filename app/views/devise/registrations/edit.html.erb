<div class="body">
  <div class="login-container">
    <div class="header">
      <h2>Edit <%= resource_name.to_s.humanize %></h2>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form", method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-ctl">
        <%= f.label :email %>
        <%= f.email_field :email, autocomplete: "email" %>
        <i class="fa fa-check-circle"></i>
        <i class="fa fa-exclamation-circle"></i>
        <small>Error message</small>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-ctl">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
        <%= f.password_field :password, autocomplete: "new-password" %>
        <i class="fa fa-check-circle"></i>
        <i class="fa fa-exclamation-circle"></i>
        <small>Error message</small>
      </div>

      <div class="form-ctl">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        <i class="fa fa-check-circle"></i>
        <i class="fa fa-exclamation-circle"></i>
        <small>Error message</small>
      </div>

      <div class="form-ctl">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i>
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="form-ctl">
        <%= f.submit "Update", :class => "button" %>
      </div>
    <% end %>

    <div class="header">
      <h3>Cancel my account</h3>
    </div>

    <div class="form-ctl">
      <p class="unhappy">Unhappy?</p>
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete , :class => "cancel-account"%>
      <%= link_to "Back", :back, :class => "form-back" %>
    </div>
  </div>
</div>

<%= javascript_pack_tag 'useredit-validation' %>
